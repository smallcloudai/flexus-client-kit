            "properties": {
              "artifact_type": {"type": "string", "enum": ["experiment_stop_rule_evaluation"]},
              "version": {"type": "string"},
              "experiment_id": {"type": "string"},
              "evaluation_window": {
                "type": "object",
                "required": ["start_date", "end_date"],
