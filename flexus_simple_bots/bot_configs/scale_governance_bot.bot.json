            "properties": {
              "artifact_type": {"type": "string", "enum": ["playbook_library"]},
              "version": {"type": "string"},
              "playbooks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["playbook_id", "scope", "trigger_conditions", "steps", "owner", "version", "status", "guardrails"],
