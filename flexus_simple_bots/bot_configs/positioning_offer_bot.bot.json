                  "properties": {"objection": {"type": "string"}, "response": {"type": "string"}}
                }
              },
              "confidence": {"type": "number", "minimum": 0, "maximum": 1},
              "sources": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["source_type", "source_ref"],
