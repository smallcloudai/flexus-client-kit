{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": ["registry_version", "bots"],
    "additionalProperties": false,
    "properties": {
        "registry_version": {
            "type": "integer",
            "const": 1
        },
        "bots": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["bot_id", "enabled", "bot_json_path", "output_dir"],
                "additionalProperties": false,
                "properties": {
                    "bot_id": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9_]*$"
                    },
                    "enabled": {
                        "type": "boolean"
                    },
                    "bot_json_path": {
                        "type": "string",
                        "minLength": 1
                    },
                    "output_dir": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        }
    }
}
